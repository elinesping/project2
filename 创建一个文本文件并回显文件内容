/**
 * 编写一个程序，如果文件1.txt不存在，就创建一个同名文件。
 * 向这个文件追加新数据。使用文本IO将100个随机生成的整数写入这个文件
 * 文件中的整数用空格分隔
 * 创建文件后，将文件中的内容输出到屏幕上。要求利用异常处理。 
 * 
 * */
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Random;


public class Mytext {
	public static void main(String[] args) throws IOException {//抛出异常
	 
		try {  
			File f = new File("D:\\1.txt"); 
			if (!f.exists()) {  //如图不出在1.txt文件
				f.createNewFile();  //创建一个新的文件
				}   
			FileWriter fw = new FileWriter(f); //文件写入对象
			PrintWriter pw = new PrintWriter(fw);//文件输入对象
			
			Random random = new Random(); //获得随机数
			for(int i=0;i<100;i++){  
				String strToWrite  = String.valueOf(random.nextInt(100)) ;
				
				//pw.append(String.valueOf(random.nextInt(100)) + " "); 
				pw.append(strToWrite + " "); //追加数据
				
				}    
			pw.flush();   //清空缓冲区域的数据
			pw.close();  
			fw.close();
			
			} 
		catch (Exception e) {  
			e.printStackTrace(); //抛出异常：在命令行打印异常信息在程序中出错的位置及原因
		}  
		
	try {
		
		FileInputStream input=new FileInputStream("D:\\1.txt");//创建一个输出流
		int i;
		while((i=input.read())!=-1)
			System.out.print(" "+ i);
	} catch (FileNotFoundException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}	
	
}}

